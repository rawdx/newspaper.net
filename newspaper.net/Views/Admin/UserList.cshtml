@model List<UserDto>

<h2>User List</h2>

<a asp-action="CreateUser" class="btn btn-primary">Create new user</a><br />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Profile Image</th>
            <th>Email</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Is Verified</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.ProfileImage))
                    {
                        <img src="data:image/png;base64,@user.ProfileImage" alt="Profile Image" style="max-width: 50px; max-height: 50px; border-radius: 50%;" />
                    }
                    else
                    {
                        <span>No Image</span>   
                    }
                </td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Phone</td>
                <td>@user.IsVerified</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                    <a asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>